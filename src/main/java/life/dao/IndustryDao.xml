<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="life.dao.IndustryDao">
	<insert id="insert" parameterType="life.entity.dataget.SecuAnalyFianlEntity"
		useGeneratedKeys="true" keyProperty="id">
		insert into industry( ID,
		type_id,name,
		type_name,code,time)values(#{id},#{typeId},#{name},#{typeName},#{code},#{time})
	</insert>

	<select id="queryByPrimaryKey" resultType="life.entity.dataget.SecuAnalyFianlEntity"
		parameterType="Integer">
		select ID, type_id, name,
		type_name,code,time,updateBy from industry where id=#{id}
	</select>

	<select id="queryByCondition" resultType="life.entity.dataget.SecuAnalyFianlEntity"
		parameterType="life.entity.dataget.SecuAnalyFianlEntity">
		select ID, type_id, name, type_name,code,time from industry
		<where>
			1=1
			<if test="typeId!=null">and type_id=#{typeId}</if>
			<if test="name!=null">and name=#{name}</if>
			<if test="time!=null">and time=#{time}</if>
		</where>
	</select>

	<select id="query" resultType="life.entity.dataget.SecuAnalyFianlEntity">
		select ID, type_id, name, type_name,code,time from industry
		<where>
			1=1
			<if test="cac.typeId!=null">and type_id=#{cac.typeId}</if>
			<if test="cac.name!=null">and name=#{cac.name}</if>
		</where>
		ORDER BY time DESC limit ${pageNo},${pageSize}
	</select>

	<select id="queryCount" resultType="long">
		select count(1) from industry
		<where>
			1=1
			<if test="cac.typeId!=null">and type_id=#{cac.typeId}</if>
			<if test="cac.name!=null">and name=#{cac.name}</if>
		</where>
	</select>

</mapper>
